[supervisord]
logfile_maxbytes=1MB
logfile_backups=2
nodaemon=true

[program:start.sh]
command=/usr/bin/start.sh
priority=1
autostart=true
autorestart=false
stdout_logfile=syslog
stderr_logfile=syslog

[program:rsyslogd]
command=/usr/sbin/rsyslogd -n
priority=2
autostart=false
autorestart=false
stdout_logfile=syslog
stderr_logfile=syslog

{# If our configuration has VLANs... #}
{% set num_relays = { 'count': 0 } %}
{% if VLAN %}
{# Count how many VLANs require a DHCP relay agent... #}
{% for vlan_name in VLAN %}
{% if VLAN[vlan_name]['dhcp_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% if VLAN[vlan_name]['dhcpv6_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% endfor %}
{% endif %}
{# If our configuration has Portchannels... #}
{% if PORTCHANNEL_INTERFACE %}
{# Count how many port channels require a DHCP relay agent... #}
{% for pc_name in PORTCHANNEL_INTERFACE %}
{% if PORTCHANNEL_INTERFACE[pc_name]['dhcp_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% if PORTCHANNEL_INTERFACE[pc_name]['dhcpv6_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% endfor %}
{% endif %}
{# If our configuration has Ethernet.. #}
{% if INTERFACE %}
{# Count how many Ethernet interfaces require a DHCP relay agent... #}
{% for intf_name in INTERFACE %}
{% if INTERFACE[intf_name]['dhcp_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% if INTERFACE[intf_name]['dhcpv6_servers'] %}
{% set _dummy = num_relays.update({'count': num_relays.count + 1}) %}
{% endif %}
{% endfor %}
{% endif %}
{# If one or more of the interfaces require a DHCPv4 relay agent... #}
{% if num_relays.count > 0 %}
[group:isc-dhcp-relay]
programs=
{%- set add_preceding_comma = { 'flag': False } %}
{# IPv4 DHCP relay porgrams #}
{% for vlan_name in VLAN -%}
{% if VLAN[vlan_name]['dhcp_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-{{ vlan_name }}
{%- endif %}
{% endfor %}
{% for pc_name in PORTCHANNEL_INTERFACE %}
{% if PORTCHANNEL_INTERFACE[pc_name]['dhcp_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-{{ pc_name }}
{%- endif %}
{% endfor %}
{% for intf_name in INTERFACE %}
{% if INTERFACE[intf_name]['dhcp_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-{{ intf_name }}
{%- endif %}
{% endfor %}
{# IPv6 DHCP relay porgrams #}
{% for vlan_name in VLAN -%}
{% if VLAN[vlan_name]['dhcpv6_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-v6-{{ vlan_name }}
{%- endif %}
{% endfor %}
{% for pc_name in PORTCHANNEL_INTERFACE %}
{% if PORTCHANNEL_INTERFACE[pc_name]['dhcpv6_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-v6-{{ pc_name }}
{%- endif %}
{% endfor %}
{% for intf_name in INTERFACE %}
{% if INTERFACE[intf_name]['dhcpv6_servers'] %}
{% if add_preceding_comma.flag %},{% endif %}
{% set _dummy = add_preceding_comma.update({'flag': True}) %}
isc-dhcp-relay-v6-{{ intf_name }}
{%- endif %}
{% endfor %}
{% endif %}


{% if num_relays.count > 0 %}
{# Create a program entry for each IPv4 DHCP relay agent instance #}
{% for vlan_name in VLAN %}
{% if VLAN[vlan_name]['dhcp_servers'] %}
[program:isc-dhcp-relay-{{ vlan_name }}]
command=/usr/sbin/dhcrelay -d -m discard -a %%h:%%p %%P --name-alias-map-file /tmp/port-name-alias-map.txt -id {{ vlan_name }}
{%- if VLAN_INTERFACE %}
{% for (name, prefix) in VLAN_INTERFACE|pfx_filter %}
{% if prefix | ipv4 and name != vlan_name %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% if INTERFACE %}
{% for (name, prefix) in INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% if PORTCHANNEL_INTERFACE %}
{% for (name, prefix) in PORTCHANNEL_INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% for dhcp_server in VLAN[vlan_name]['dhcp_servers'] %} {{ dhcp_server }}{% endfor %}

priority=3
autostart=false
autorestart=false
stdout_logfile=syslog
stderr_logfile=syslog

{% endif %}
{% endfor %}
{%- if PORTCHANNEL_INTERFACE %}
{% for pc_name in PORTCHANNEL_INTERFACE %}
{%- if PORTCHANNEL_INTERFACE[pc_name]['dhcp_servers'] -%}
[program:isc-dhcp-relay-{{ pc_name }}]
command=/usr/sbin/dhcrelay -d -m discard -a %%h:%%p %%P --name-alias-map-file /tmp/port-name-alias-map.txt -id {{ pc_name }}
{% for (name, prefix) in PORTCHANNEL_INTERFACE|pfx_filter %}
{% if prefix | ipv4 and name != pc_name %} -iu {{ name }}{% endif -%}
{% endfor %}
{% if INTERFACE %}
{% for (name, prefix) in INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% if VLAN_INTERFACE %}
{% for (name, prefix) in VLAN_INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% for dhcp_server in PORTCHANNEL_INTERFACE[pc_name]['dhcp_servers'] %} {{ dhcp_server }}{% endfor %}

priority=3
autostart=false
autorestart=false
stdout_logfile=syslog
stderr_logfile=syslog

{% endif %}
{% endfor %}
{% endif %}
{%- if INTERFACE -%}
{% for intf_name in INTERFACE %}
{% if INTERFACE[intf_name]['dhcp_servers'] %}
[program:isc-dhcp-relay-{{ intf_name }}]
command=/usr/sbin/dhcrelay -d -m discard -a %%h:%%p %%P --name-alias-map-file /tmp/port-name-alias-map.txt -id {{ intf_name }}
{% for (name, prefix) in INTERFACE|pfx_filter %}
{% if prefix | ipv4 and name != intf_name %} -iu {{ name }}{% endif -%}
{% endfor %}
{% if VLAN_INTERFACE -%}
{% for (name, prefix) in VLAN_INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor -%}
{% endif -%}
{% if PORTCHANNEL_INTERFACE -%}
{% for (name, prefix) in PORTCHANNEL_INTERFACE|pfx_filter %}
{% if prefix | ipv4 %} -iu {{ name }}{% endif -%}
{% endfor %}
{% endif %}
{% for dhcp_server in INTERFACE[intf_name]['dhcp_servers'] %} {{ dhcp_server }}{% endfor %}

priority=3
autostart=false
autorestart=false
stdout_logfile=syslog
stderr_logfile=syslog

{% endif %}
{% endfor %}
{% endif %}

